@using TicariOtomasyon.Models.Concrete
@model List<Satislar>
@{
    ViewBag.Title = "SatisGecmisi";
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}

<div class="container">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-xl-8" style="min-width:100%;">
                <div class="card">
                    <div class="card-header pb-0">
                        <h3 class="card-title mb-0">Satın ALma Geçmişi</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped" style="width:100%">
                            @using (Html.BeginForm())
                            {
                                <tr>
                                    <td colspan="5">
                                        <input type="text" name="ara" class="form-control" placeholder="Ara ..." style="width:93%; float:left;" />
                                        <button class="btn btn-icon btn-primary" data-toggle="tooltip"
                                                data-placement="top" data-original-title="ARA" style="float:left">
                                            <i class="feather icon-search"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                            <thead>
                                <tr>
                                    <th scope="col">Fotoğraf</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col" style="text-align:center">Fiyat</th>
                                    <th scope="col" style="text-align:center">Adet</th>
                                    <th scope="col" style="text-align:center">Tarih</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    @Html.Hidden(item.UrunID.ToString())
                                    <tr>
                                        <td style="vertical-align:middle;"><img src="@item.Urunlerim.UrunFoto" width="50" height="50" class="rounded-circle my-n1"></td>
                                        <td style="vertical-align:middle;">@item.Urunlerim.UrunAd</td>
                                        <td style="vertical-align:middle; text-align:center;">@item.SatisFiyat</td>
                                        <td style="vertical-align:middle; text-align:center;">@item.SatisAdet</td>
                                        <td style="vertical-align:middle; text-align:center;">@item.SatisTarihi.ToShortDateString()</td>
                                        @*<td style="vertical-align:middle; text-align:center; width:100px;">
                                                <div style="display:inline-flex;">
                                                    <a href="/Musteri/MSil/@item.MusteriID" class="btn btn-icon btn-danger" data-toggle="tooltip"
                                                       data-placement="top" data-original-title="SİL">
                                                        <i class="feather icon-trash-2" style="margin:3px 7px;"></i>
                                                    </a>
                                                </div>
                                                <div style="display:inline-flex;">
                                                    <a href="/Musteri/MGetir/@item.MusteriID" class="btn btn-icon btn-success" data-toggle="tooltip"
                                                       data-placement="top" data-original-title="DÜZENLE">
                                                        <i class="feather icon-edit-2" style="margin:3px 7px;"></i>
                                                    </a>
                                                </div>
                                            </td>*@
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
