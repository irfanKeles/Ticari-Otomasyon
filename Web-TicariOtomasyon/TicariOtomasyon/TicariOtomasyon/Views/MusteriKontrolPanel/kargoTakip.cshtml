@using TicariOtomasyon.Models.Concrete
@model List<KargoTakip>
@{
    ViewBag.Title = "kargoTakip";
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}

<div class="container">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-xl-8" style="min-width:80%; margin:0px 10%;">
                <div class="card">
                    <div class="card-header pb-0">
                        <div class="card-actions float-right">
                            <div class="dropdown show">


                            </div>
                        </div>
                        <h3>Kargo Takip</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            @using (Html.BeginForm())
                            {
                                <tr>
                                    <td colspan="4">
                                        <input type="text" name="ara" class="form-control" placeholder="Ara ..." style="width:93%; float:left;" />
                                        <button class="btn btn-icon btn-primary" data-toggle="tooltip"
                                                data-placement="top" data-original-title="ARA" style="float:left">
                                            <i class="feather icon-search"></i>
                                        </button>
                                    </td>
                                </tr>
                            }

                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Takip Kodu</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Tarih</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{ int sayac = 0;}
                                @foreach (var item in Model)
                                {
                                    sayac++;
                                    <tr>
                                        <td style="vertical-align:middle;">@sayac</td>
                                        <td style="vertical-align:middle;">@item.TakiipKodu</td>
                                        <td style="vertical-align:middle;">@item.Aciklama</td>
                                        <td style="vertical-align:middle;">@item.Tarih.ToShortDateString()</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


