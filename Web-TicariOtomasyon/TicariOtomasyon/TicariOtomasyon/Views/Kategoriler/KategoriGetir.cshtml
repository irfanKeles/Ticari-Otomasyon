@model TicariOtomasyon.Models.Concrete.Kategoriler
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-xl-8" style="min-width:80%; margin:0px 10%;">
                <div class="card">
                    <div class="card-header pb-0">

                        <h3 class="card-title mb-0">Kategori</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col" style="text-align:center">Kategori Durum</th>
                                    <th scope="col" style="vertical-align:middle; text-align:center;">İşemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @Html.HiddenFor(x => x.KategoriID)
                                <tr>
                                    <td>@Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control", @style = "background-color:#3333; padding:0 15px;" })</td>
                                    <td style="vertical-align:middle; text-align:center;">
                                        <span>Aktif @Html.RadioButtonFor(x => x.KategoriDurum, "true", new { @class = "form-control", @style = "width:15px; height:15px; display:inline; margin-right:20px; margin-left:5px;" })</span>
                                        <span>Kaldır  @Html.RadioButtonFor(x => x.KategoriDurum, "false", new { @class = "form-control", @style = "width:15px; height:15px; display:inline; margin-left:5px;" })</span>
                                    </td>
                                    <td style="vertical-align:middle; text-align:center;">
                                        <div>
                                            <button class="btn btn-success" style="width:140px">
                                                Düzenle
                                                <i class="feather icon-edit-2" style="margin:5px 10px; "></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <section class="py-5" style="min-width:100%;">
                        <div class="container">
                            <div class="card">
                                <div class="card-body">

                                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true"> K. Ait Ürün Sayısı</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">K.Ait Ürün Listesi</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" id="pills-tab" data-toggle="pill" href="#pills" role="tab" aria-controls="pills" aria-selected="false">K. Ait Satış Sayısı</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content" id="pills-tabContent">
                                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

                                            @Html.Action("Kategoriurun", "Kategoriler")

                                        </div>
                                        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                                            @Html.Action("KategoriurunList", "Kategoriler")
                                        </div>
                                        <div class="tab-pane fade" id="pills" role="tabpanel" aria-labelledby="pills-tab">
                                            @Html.Action("KategoriSatisOran", "Kategoriler")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>


