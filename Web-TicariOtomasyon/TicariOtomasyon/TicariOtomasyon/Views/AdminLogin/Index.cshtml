@using TicariOtomasyon.Models.Concrete
@model TicariOtomasyon.Models.Concrete.Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <title>Admin Giriş </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/Bootstrap/dist/assets/images/favicon.ico" type="image/x-icon">

    <!-- vendor css -->
    <link rel="stylesheet" href="~/Bootstrap/dist/assets/css/style.css">
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-content">
            <div class="card">
                <div class="row align-items-center text-center">
                    <div class="col-md-12">
                        <div class="card-body">
                            <img src="~/Bootstrap/dist/assets/images/user/users.png" width="50" height="25" alt="" class="img-fluid mb-4">
                            <h4 class="mb-3 f-w-400">Admin Giriş</h4>
                            @using (Html.BeginForm("Index", "AdminLogin", FormMethod.Post))
                            {
                                <div class="form-group mb-3">
                                    <label class="floating-label" for="Email">Kullanıcı Adı:</label>
                                    @Html.TextBoxFor(x => x.AdminKullaniciAd, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-4">
                                    <label class="floating-label" for="Password">Şifre</label>
                                    @Html.TextBoxFor(x => x.AdminSifre, new { @class = "form-control", @type = "password" })
                                </div>
                                <button class="btn btn-block btn-primary mb-4">Griş Yap</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Required Js -->

    <script src="~/Bootstrap/dist/assets/js/vendor-all.js"></script>
    <script src="~/Bootstrap/dist/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/Bootstrap/dist/assets/js/ripple.js"></script>
    <script src="~/Bootstrap/dist/assets/js/pcoded.min.js"></script>
</body>
</html>
