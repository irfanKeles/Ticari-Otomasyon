@using TicariOtomasyon.Models.Concrete
@model List<FaturaIcerik>
@{
    ViewBag.Title = "Ficerik";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3 style="display:block;">Fatura İçerik</h3>
<table class="table table-hover table-bordered" style="background-color:white;">
    <tr>
        <td colspan="4">
            <div style="float:right;">
                <a href="/Fatura/FIcerğiEkle" class="btn btn-outline-primary">
                    Fatura İçeriği Ekle
                    <i class="feather icon-plus" style="margin:3px 7px;"></i>
                </a>
            </div>
        </td>
    </tr>
    <tr style="background-color:white;">
        <th scope="col"> Fatura Açıklama</th>
        <th scope="col"> Adet</th>
        <th scope="col"> Birim Fiyat</th>
        <th scope="col"> Tutar</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @Html.Hidden(item.FaturaID.ToString())
                <td>@item.FaturaAcıklama</td>
                <td>@item.FaturaMiktar</td>
                <td>@item.FaturaBirimFiyat</td>
                <td>@item.FaturaTutar</td>
            </tr>
        }
    </tbody>
</table>
