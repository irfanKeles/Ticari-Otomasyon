@using TicariOtomasyon.Models.Concrete
@model List<KargoTakip>
@{
    ViewBag.Title = "kargoTakip";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-xl-8" style="min-width:80%; margin:0px 10%;">
                <div class="card">
                    <div class="card-header pb-0">
                        <div class="card-actions float-right">
                            <div class="dropdown show">


                            </div>
                        </div>
                        <h3>Kargo Takip</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Tarih</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    @Html.Hidden(@item.KTakipid.ToString())
                                    <tr>
                                        <td style="vertical-align:middle;">@item.Aciklama</td>
                                        <td style="vertical-align:middle;">@item.Tarih.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



