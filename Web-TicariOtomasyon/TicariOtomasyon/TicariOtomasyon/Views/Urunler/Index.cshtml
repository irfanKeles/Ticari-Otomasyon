@using TicariOtomasyon.Models.Concrete;
@model List<Urunlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="~/Content/MyCss/List.css" rel="stylesheet" />
<div class="container">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-xl-8" style="min-width:100%;">
                <div class="card">
                    <div class="card-header pb-0">
                        <div class="card-actions">

                            <div class="card-actions float-right">
                                <div class="dropdown show">
                                    <div style="float:right; margin:0 20px 0 0">
                                        <a href="/Urunler/UrunEkle" class="btn btn-outline-primary">
                                            Ürün Ekle
                                            <i class="feather icon-plus" style="margin:3px 7px;"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <h3 class="card-title mb-0">Ürün Listesi</h3>


                            <div class="card-body">
                                <table class="table table-striped" style="width:100%">
                                    @using (Html.BeginForm())
                                    {
                                        <tr>
                                            <td colspan="7">
                                                <input type="text" name="ara" class="form-control" placeholder="Ara ..." style="width:93%; float:left;" />
                                                <button class="btn btn-icon btn-primary" data-toggle="tooltip"
                                                        data-placement="top" data-original-title="ARA" style="float:left">
                                                    <i class="feather icon-search"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                    <thead>
                                        <tr>
                                            <th scope="col">Fotoğraf</th>
                                            <th scope="col">Ürün Adı</th>
                                            <th scope="col">Alış F.</th>
                                            <th scope="col">Satış F.</th>
                                            <th scope="col">Kategori</th>
                                            <th scope="col">Marka</th>
                                            <th scope="col" style="vertical-align:middle; text-align:center;">İşemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            @Html.Hidden(@item.UrunID.ToString())
                                            <tr>
                                                <td style="vertical-align:middle;"><img src="@item.UrunFoto" width="50" height="50" class="rounded-circle my-n1"></td>
                                                <td style="vertical-align:middle;">@item.UrunAd</td>
                                                <td style="vertical-align:middle;">@item.UrunAlisFiyat</td>
                                                <td style="vertical-align:middle;">@item.UrunSatisFiyat</td>
                                                <td style="vertical-align:middle;">@item.Kategoriler.KategoriAd</td>
                                                <td style="vertical-align:middle;">@item.Markalar.MarkaAd</td>
                                                <td style="vertical-align:middle; text-align:center;">
                                                    <div style="display:inline-flex;">
                                                        <a href="/Urunler/UurnGetir/@item.UrunID" class="btn btn-icon btn-success" data-toggle="tooltip"
                                                           data-placement="top" data-original-title="DÜZENLE">
                                                            <i class="feather icon-edit-2" style="margin:3px 7px;"></i>
                                                        </a>
                                                    </div>
                                                    <div style="display:inline-flex;">
                                                        <a href="/Urunler/urunDetay/@item.UrunID" class="btn btn-icon btn-primary" data-toggle="tooltip"
                                                           data-placement="top" data-original-title="GÖRÜNTÜLE">
                                                            <i class="feather icon-eye" style="margin:4px 7px;"></i>
                                                        </a>
                                                    </div>
                                                    <div style="display:inline-flex;">
                                                        <a href="/Urunler/UrunSatis/@item.UrunID" class="btn btn-icon btn-dark" data-toggle="tooltip"
                                                           data-placement="top" data-original-title="SATIŞ YAP">
                                                            <i class="fa fa-cart-plus" style="margin:4px 7px;"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
