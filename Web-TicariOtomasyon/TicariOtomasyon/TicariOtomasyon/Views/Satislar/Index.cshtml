@using TicariOtomasyon.Models.Concrete;
@model List<Satislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3 style="display:block;">SATIŞ LİSTESİ</h3>
<table id="SatisTablo" class="table table-hover table-bordered" style="background-color:white; max-width:1000px;">
    <thead>
        <tr>
            <td colspan="8">
                <div style="float:right;">
                    <a href="/Satislar/SatisYap" class="btn btn-outline-primary">
                        Satış Ekle
                        <i class="feather icon-plus" style="margin:3px 7px;"></i>
                    </a>
                </div>
            </td>
        </tr>
        <tr>
            <th scope="col"> Ürün</th>
            <th scope="col"> MÜŞTERİ ADI / SOYADI</th>
            <th scope="col"> PERSONEL ADI / SOYADI</th>
            <th scope="col"> ADET</th>
            <th scope="col"> FİYAT</th>
            <th scope="col"> TOPLAM TUTAR</th>
            <th scope="col"> SATIŞ TARİHİ</th>
            <th scope="col" style="text-align:center;"> İŞLEMLLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @Html.Hidden(@item.SatisID.ToString())
            <tr>
                <td style="vertical-align:middle;">@item.Urunlerim.UrunAd</td>
                <td style="vertical-align:middle;">@item.Musteriler.MusteriAD @item.Musteriler.MusteriSoyad</td>
                <td style="vertical-align:middle;">@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td style="vertical-align:middle;">@item.SatisAdet</td>
                <td style="vertical-align:middle;">@item.SatisFiyat</td>
                <td style="vertical-align:middle;">@item.SatisToplamFiyat</td>
                <td style="vertical-align:middle;">@item.SatisTarihi.ToString("dd/MM/yyyy")</td>
                <td style="vertical-align:middle;">
                    <div style="display:inline-flex">
                        <a href="/Satislar/SGetir/@item.SatisID" class="btn btn-icon btn-success" data-toggle="tooltip"
                       data-placement="top" data-original-title="DÜZENLE">
                            <i class="feather icon-edit-2"></i>
                        </a>
                    </div>
                    <div style="display:inline-flex">
                        <a href="/Satislar/Sdetay"  class="btn btn-icon btn-dark" data-toggle="tooltip"
                       data-placement="top" data-original-title="YAZDIR">
                            <i class="feather icon-package"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#SatisTablo').dataTable({});
</script>

