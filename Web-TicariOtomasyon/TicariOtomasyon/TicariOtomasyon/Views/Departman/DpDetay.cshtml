@using TicariOtomasyon.Models.Concrete
@model List<Personel>

<div class="container" style="padding:0px;">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-xl-8" style="min-width:100%;">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Personel Fotoğraf</th>
                                    <th scope="col">Personel Adı</th>
                                    <th scope="col" style="width:100px; vertical-align:middle;">İşemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="vertical-align:middle;"><img src="@item.PersonelFoto" width="50" height="50" class="rounded-circle my-n1"></td>
                                        <td>@item.PersonelAd @item.PersonelSoyad</td>
                                        <td>
                                            <div style="display:inline-flex;">
                                                <a href="/Departman/DePerSatis/@item.PersonelID" class="btn btn-icon btn-dark" data-toggle="tooltip"
                                                   data-placement="top" data-original-title="Satış Geçmişi">
                                                    <i class="feather icon-printer" style="margin:3px 7px;"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
